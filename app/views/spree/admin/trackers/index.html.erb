<%= render 'spree/admin/shared/general_tabs' %>

<% admin_breadcrumb(Spree.t('admin.trackers')) %>

<% content_for :page_actions do %>
  <% if can?(:create, Spree::Tracker) %>
    <li>
      <%= link_to Spree.t(:new_tracker), new_object_url, id: 'admin_new_tracker_link', class: 'button' %>
    </li>
  <% end %>
<% end %>

<% if @trackers.any? %>
  <table class='index'>
    <colgroup>
      <col style='width: 20%'>
      <col style='width: 10%'>
      <col style='width: 10%'>
      <col style='width: 20%'>
      <col style='width: 10%'>
    </colgroup>

    <thead>
      <tr data-hook='admin_trackers_index_headers'>
        <th><%= Spree::Tracker.human_attribute_name(:analytics_id) %></th>
        <th><%= Spree::Tracker.human_attribute_name(:tracker_type) %></th>
        <th class='align-center'><%= Spree::Tracker.human_attribute_name(:active) %></th>
        <th><%= Spree.t(:store) %></th>
        <th class="actions"></th>
      </tr>
    </thead>

    <tbody>
      <% @trackers.each do |tracker|%>
        <tr id='<%= spree_dom_id tracker %>'' data-hook='admin_trackers_index_rows' class='<%= cycle('odd', 'even')%>'>
          <td><%= tracker.analytics_id %></td>
          <td><%= tracker.tracker_type.capitalize %></td>
          <td class='align-center'>
            <span class="pill pill-<%= tracker.active? ? 'active' : 'inactive' %>">
              <%= tracker.active? ? Spree.t(:say_yes) : Spree.t(:say_no) %></td>
            </span>
          <td><%= tracker.store.name %></td>
          <td class="actions">
            <% if can?(:update, tracker) %>
              <%= link_to_edit tracker, no_text: true %>
            <% end %>

            <% if can?(:destroy, tracker) %>
              <%= link_to_delete tracker, no_text: true %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class='no-objects-found'>
    <%= render 'spree/admin/shared/no_objects_found',
                 resource: Spree::Tracker,
                 new_resource_url: new_object_url %>
  </div>
<% end %>
